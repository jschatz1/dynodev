<%= content_tag(:nav,
                  class: ["navbar", local_assigns[:color]],
                  role: "navigation",
                  "aria-label" => "main navigation") do %>
   <div class="container">
      <div class="navbar-brand">
        <%= link_to home_path, class: "navbar-item" do %>
          <%= image_tag asset_pack_path 'media/images/dino.svg', alt: 'dyno brand' %>
        <% end %>
         <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbar-dyno">
         <span aria-hidden="true"></span>
         <span aria-hidden="true"></span>
         <span aria-hidden="true"></span>
         </a>
      </div>
      <div id="navbar-dyno" class="navbar-menu">
         <div class="navbar-start">
            <%= link_to "Home", home_path, class: "navbar-item" %>
            <%= link_to "Docs", home_path, class: "navbar-item" %>
            <%= link_to "About", home_path, class: "navbar-item" %>
          </div>
         <div class="navbar-end">
            <div class="navbar-item">
               <div class="buttons">
                  <% if not current_user.nil? %>
                    <%= link_to current_user.name, home_path, class: "button is-text" %>
                    <%= link_to "Projects", '/projects', class: "button is-text" %>
                    <%= link_to 'Sign out', signout_path, class: "button is-text" %>
                  <% else %>
                    <%= link_to "Sign up", "/auth/github", class: "button is-text" %>
                    <%= link_to "Sign in", "/auth/github", class: "button is-text" %>
                  <% end %>
               </div>
            </div>
         </div>
      </div>
   </div>
<% end %>


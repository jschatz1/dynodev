<!DOCTYPE html>
<html>
  <head>
    <title>Dyno</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag 'https://fonts.googleapis.com/css2?family=Muli:wght@400;700&display=swap' %>
    <%= favicon_link_tag asset_pack_path 'media/images/dino_favicon.svg', rel: 'apple-touch-icon', type: 'image/svg+xml' %>
    <%= javascript_pack_tag 'application' %>
    <%= stylesheet_pack_tag 'application' %>
    <script type="text/javascript">
      document.addEventListener("DOMContentLoaded", function() {
        window.dynoRoutes = {
          currentRoute: "<%= controller_name %>",
        }
      })
    </script>
  </head>

  <body class="<%= controller_name %>">
  <%= yield %>
  </body>
</html>
